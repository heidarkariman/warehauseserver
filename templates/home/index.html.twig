{% extends 'base.html.twig' %}

{% block title %}
  Hello HomeController!
{% endblock %}
{% block stylesheets %}
  <style>
    .navbar {
      margin-bottom: 0;
      border-radius: 0;
    }
    .card {
      margin: 10px;
      box-shadow: 0px 0px 10px grey;
    }
    .card-header {
      background-color: #007bff;
      color: white;
      font-weight: bold;
    }
    .card-header:hover {
      background-color: #0056b3;
    }
    .list-group-item:hover {
      background-color: #f8f9fa;
    }
    .modal-body {
      max-height: calc(100vh - 200px);
      overflow-y: auto;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="card-group">
    <div class="card">
      <div class="card-header" data-toggle="modal" data-target="#productsModal">Products</div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <a class="nav-link" href="/products">Products</a>
        </li>
        <li class="list-group-item">
          <a class="nav-link" href="/categories">Categories</a>
        </li>
        <li class="list-group-item">
          <a class="nav-link" href="/productscategories">Products Categories</a>
        </li>
      </ul>
    </div>
    <div class="card">
      <div class="card-header" data-toggle="modal" data-target="#usersModal">Users and Roles</div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <a class="nav-link" href="/users">Users</a>
        </li>
        <li class="list-group-item">
          <a class="nav-link" href="/roles">Roles</a>
        </li>
        <li class="list-group-item">
          <a class="nav-link" href="/userroles">User Roles</a>
        </li>
      </ul>
    </div>
    <div class="card">
      <div class="card-header" data-toggle="modal" data-target="#transactionsModal">Transactions</div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <a class="nav-link" href="/sales">Sales</a>
        </li>
        <li class="list-group-item">
          <a class="nav-link" href="/purchases">Purchases</a>
        </li>
        <li class="list-group-item">
          <a class="nav-link" href="/inventories">Inventories</a>
        </li>
      </ul>
    </div>
    <div class="card">
      <div class="card-header" data-toggle="modal" data-target="#partnersModal">Partners</div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <a class="nav-link" href="/vendors">Vendors</a>
        </li>
        <li class="list-group-item">
          <a class="nav-link" href="/customers">Customers</a>
        </li>
      </ul>
    </div>
    <div class="card">
      <div class="card-header" data-toggle="modal" data-target="#warehousesModal">Warehouses</div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <a class="nav-link" href="/warehauses">List Warehauses</a>
        </li>
        <li class="list-group-item">
          <a class="nav-link" href="/warehauses/new">Add Warehauses</a>
        </li>
      </ul>
    </div>

<div class="modal fade" id="partnersModal" tabindex="-1" role="dialog" aria-labelledby="partnersModalLabel" aria-hidden="true">
